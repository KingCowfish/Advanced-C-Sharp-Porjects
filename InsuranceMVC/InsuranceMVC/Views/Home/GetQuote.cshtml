<div class="row no gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center" style="background-color:aquamarine">
            <h4 class="m-0">Car Insurance Quote</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Quote", "Home", FormMethod.Post))
            {
            <div class="row">
                <h5 class="m-2"> Please provide the following personal information:</h5>
                <div class="form-group col-md-12">
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="EmailAddress" type="text" class="form-control" placeholder="Email Address" />
                </div>
                <div class="form-group col-md-12">
                    <p>What is your date of birth?</p>
                    <input name="DateOfBirth" type="number" class="form-control" />
                </div>
                <br />
                <h5> Now please provide some information about your car:</h5>
                <div class="form-group col-md-12">
                    <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                </div>
                <div class="form-group col-md-12">
                    <p>What year was your car made?</p>
                    <input name="CarYear" type="number" min="1900" step="1" class="form-control" placeholder="Car Year" />
                </div>
                <div class="form-group col-md-12">
                    <p>How many speeding tickets have you received?</p>
                    <input name="Ticket" type="number" min="0" class="form-control col-md-2"/>
                </div>
                <div class="form-group col-md-12">
                    <p>How many DUI's have you received?</p>
                    <input name="DUI" type="number" min="0" class="form-control col-md-2" />
                </div>
                <p style="margin: 10px;">Would you like full coverage or just liability insurance?</p>
                <br />
                <div class="form-check-inline">
                    <input class="radio-inline mx-3" type="radio" name="Coverage" id="FullCoverage" value="option1" checked>
                    <label class="form-check-label" for="FullCoverage">
                        Full
                    </label>
                    <input class="radio-inline mx-3" type="radio" name="Coverage" id="Liability" value="option2">
                    <label class="form-check-label" for="Liability">
                        Liability
                    </label>
                </div>
                <button type="submit" class="btn btn-block btn-primary" style="margin:20px;">submit</button>
            </div>
            }
        </div>
    </div>
</div>